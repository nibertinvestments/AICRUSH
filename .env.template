# AICRUSH Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file - it contains sensitive information

# =============================================================================
# GOOGLE CLOUD CONFIGURATION
# =============================================================================

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=gen-lang-client-0311226580

# Google Cloud Region
GOOGLE_CLOUD_REGION=us-east4

# Storage Configuration
STORAGE_BUCKET=ai-storage-bucket-6658

# Service Account (if using local development)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# =============================================================================
# CLOUD RUN CONFIGURATION
# =============================================================================

# Cloud Run Service Name
CLOUD_RUN_SERVICE=ai-gpu-service-east

# Cloud Run Service URL
CLOUD_RUN_URL=https://ai-gpu-service-east-249675450204.us-east4.run.app

# Container Registry
CONTAINER_REGISTRY=us-central1-docker.pkg.dev/gen-lang-client-0311226580/ai-gpu-repo

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug Mode (true/false)
DEBUG=true

# Log Level (debug, info, warning, error, critical)
LOG_LEVEL=info

# Application Port
PORT=8080

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# Model Version
MODEL_VERSION=v1.0

# GPU Configuration
GPU_ENABLED=true
GPU_TYPE=nvidia-l4

# Model Parameters
MAX_BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=2048
TEMPERATURE=0.7

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Version
API_VERSION=v1

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_DAY=1000

# Authentication
# API_KEY=your-api-key-here  # For development only

# =============================================================================
# DATABASE CONFIGURATION (Future)
# =============================================================================

# Database URL (when implemented)
# DATABASE_URL=postgresql://user:password@localhost:5432/aicrush

# Redis Configuration (for caching, when implemented)
# REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption Key (generate with: openssl rand -hex 32)
# ENCRYPTION_KEY=your-32-character-hex-key-here

# JWT Secret (for authentication, when implemented)
# JWT_SECRET=your-jwt-secret-here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Enable Metrics Collection
METRICS_ENABLED=true

# Monitoring Endpoint
MONITORING_ENDPOINT=/metrics

# Health Check Endpoint
HEALTH_CHECK_ENDPOINT=/health

# Telemetry Configuration
TELEMETRY_ENABLED=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Hot Reload (development only)
HOT_RELOAD=true

# Development Tools
ENABLE_PROFILER=false
ENABLE_DEBUGGER=false

# Testing Configuration
TEST_DATA_PATH=./tests/data
MOCK_EXTERNAL_SERVICES=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Feature-specific flags
ENABLE_CODE_REVIEW=false
ENABLE_MULTI_LANGUAGE=false
ENABLE_REAL_TIME_COLLABORATION=false

# =============================================================================
# EXTERNAL SERVICES (Future)
# =============================================================================

# GitHub Integration (when implemented)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Slack Integration (for notifications, when implemented)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Email Configuration (for notifications, when implemented)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Request Timeout (seconds)
REQUEST_TIMEOUT=300

# Worker Configuration
WORKER_PROCESSES=1
WORKER_THREADS=4

# Memory Limits
MAX_MEMORY_USAGE=4GB
MAX_DISK_USAGE=10GB

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# BACKUP & RECOVERY (Future)
# =============================================================================

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30

# =============================================================================
# COST OPTIMIZATION
# =============================================================================

# Auto-scaling Configuration
MIN_INSTANCES=0
MAX_INSTANCES=10
TARGET_CPU_UTILIZATION=70

# Cost Alerts
COST_ALERT_THRESHOLD=200  # USD per month
BILLING_ALERT_EMAIL=josh@nibertinvestments.com

# =============================================================================
# DEVELOPMENT TEAM CONFIGURATION
# =============================================================================

# Developer Information (for local development)
DEVELOPER_NAME=Your Name
DEVELOPER_EMAIL=your-email@example.com

# Git Configuration
GIT_COMMIT_SIGNING=true
GIT_HOOKS_ENABLED=true

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================

# Data Retention (days)
DATA_RETENTION_DAYS=365

# Privacy Settings
ANALYTICS_ENABLED=true
USAGE_TRACKING=true
ERROR_REPORTING=true

# =============================================================================
# NOTES FOR DEVELOPERS
# =============================================================================

# 1. Copy this file to .env: cp .env.template .env
# 2. Fill in your actual values (never commit .env)
# 3. Verify configuration: python scripts/verify_env.py
# 4. For production, use Google Secret Manager instead of .env files
# 5. Regular security review of environment variables

